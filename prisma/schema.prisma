generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model public_posts {
  id          Int      @id(map: "posts_pk") @default(autoincrement())
  user_id     Int
  description String
  post_url    String
  created_at  DateTime @db.Timestamp(6)
  updated_at  DateTime @db.Timestamp(6)

  @@map("public.posts")
}

model public_rating {
  id         Int      @id(map: "Rating_pk") @default(autoincrement())
  value      Int
  user_id    Int
  post_id    Int
  created_at DateTime @db.Timestamp(6)
  updated_at DateTime @db.Timestamp(6)

  @@map("public.rating")
}

model public_users {
  id         Int      @id(map: "users_pk") @default(autoincrement())
  username   String   @unique
  email      String   @unique
  password   String
  user_url   String
  created_at DateTime @db.Timestamp(6)
  updated_at DateTime @db.Timestamp(6)

  @@map("public.users")
}
